import Foundation

enum Config {
    // ============================================================================
    // REQUIRED: OpenAI API Key
    // ============================================================================
    // Get one at: https://platform.openai.com/api-keys
    // Must have access to Realtime API (gpt-4o-realtime)
    //
    static let openAIAPIKey = "your-openai-api-key-here"
    
    // ============================================================================
    // OPTIONAL: Perplexity API Key
    // ============================================================================
    // Get one at: https://www.perplexity.ai/settings/api
    //
    // Leave empty "" to disable search_internet tool.
    // Everything else will work normally without it.
    //
    static let perplexityAPIKey = ""
    
    // ============================================================================
    // Helpers (do not modify)
    // ============================================================================
    
    /// Returns true if Perplexity API key is configured and valid
    static var isPerplexityConfigured: Bool {
        !perplexityAPIKey.isEmpty &&
        perplexityAPIKey != "your-perplexity-api-key-here"
    }
}
